{
    "name"             : "devaloka/taxonomy",
    "description"      : "Interface, Trait and class(es) for WordPress Taxonomy",
    "type"             : "library",
    "keywords"         : [
        "wordpress",
        "taxonomy",
        "term",
        "category",
        "tag"
    ],
    "homepage"         : "https://github.com/devaloka/taxonomy",
    "license"          : [
        "MIT",
        "GPL-2.0",
        "GPL-3.0"
    ],
    "minimum-stability": "dev",
    "authors"          : [
        {
            "name"    : "Whizark",
            "email"   : "devaloka@whizark.com",
            "homepage": "http://whizark.com",
            "role"    : "Developer"
        }
    ],
    "support"          : {
        "email" : "devaloka@whizark.com",
        "issues": "https://github.com/devaloka/devaloka/issues",
        "wiki"  : "https://github.com/devaloka/devaloka/wiki",
        "source": "https://github.com/devaloka/taxonomy"
    },
    "require"          : {
        "php"               : ">=5.5.9",
        "devaloka/post-type": "~0.5.3"
    },
    "require-dev"      : {
        "squizlabs/php_codesniffer": "^2.5.0"
    },
    "autoload"         : {
        "psr-4": {
            "Devaloka\\Component\\Taxonomy\\": ""
        }
    },
    "scripts"          : {
        "test"       : [
            "php vendor/squizlabs/php_codesniffer/scripts/phpcs --colors"
        ],
        "test-travis": [
            "php vendor/squizlabs/php_codesniffer/scripts/phpcs --colors"
        ]
    },
    "archive"          : {
        "exclude": [
            ".gitignore",
            ".gitattributes",
            ".mailmap",
            ".editorconfig",
            "package.json",
            "npm-shrinkwrap.json",
            ".remarkrc",
            "composer.json",
            "phpcs.xml",
            ".travis.yml"
        ]
    },
    "extra"            : {
        "branch-alias": {
            "dev-master": "0.7.x-dev"
        }
    }
}
